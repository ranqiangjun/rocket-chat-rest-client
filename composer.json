{
    "name": "jungleran/rocket-chat-rest-client",
    "description": "Rocket Chat REST API client in PHP.",
    "autoload": {
        "classmap": ["src/"]
    },
    "minimum-stability": "stable",
    "require": {
        "nategood/httpful": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "scripts": {
      "sniffer:php8": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.0",
      "sniffer:php81": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1",
      "sniffer:php82": "phpcs -p ./src --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.2"
    }
}
